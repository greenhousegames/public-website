{
  "name": "@greenhousegames/public-website",
  "version": "0.1.7",
  "scripts": {
    "copy-dev-config": "cp config.development.js app/config.js",
    "copy-prod-config": "cp config.production.js app/config.js",
    "start": "npm run copy-dev-config && gulp && brunch watch --server",
    "build": "npm run copy-dev-config && gulp && brunch build",
    "pretest": "npm run build",
    "test": "npm run test-only",
    "test-only": "karma start",
    "test-debug": "karma start --single-run=false --debug",
    "production": "npm run copy-prod-config && gulp --production && brunch build --production",
    "preversion": "(rm -r dist || true) && mkdir dist && cd dist && mkdir debug && mkdir release",
    "version": "npm run build && cp -R public/ dist/debug && npm run production && cp -R public/ dist/release",
    "postversion": "git add -A dist && git push && git push --tags && npm publish && firebase deploy"
  },
  "dependencies": {
    "@greenhousegames/game-template": "~0.0.1",
    "@greenhousegames/game-template-cordova": "~0.0.1",
    "@greenhousegames/heartbeat": "~0.0.1",
    "@greenhousegames/heartbeat-cordova": "~0.0.1",
    "@greenhousegames/smash-dot": "^0.1.0",
    "@greenhousegames/smash-dot-cordova": "^0.1.0",
    "firebase": "^3.4.1",
    "firebase-reporting": "~0.0.1",
    "foundation-sites": "~6.2.3",
    "jquery": "^2.2.0",
    "motion-ui": "~1.2.2",
    "rsvp": "^3.3.3",
    "timeago": "^1.5.3",
    "what-input": "^2.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.1",
    "babel-brunch": "^6.0.6",
    "babel-preset-es2015": "^6.3.13",
    "brunch": "^2.8.2",
    "clean-css-brunch": "^2.0.0",
    "css-brunch": "^2.0.0",
    "gulp": "gulpjs/gulp#4.0",
    "gulp-cli": "^1.2.1",
    "javascript-brunch": "^2.0.0",
    "js-yaml": "^3.4.6",
    "panini": "^1.3.0",
    "postcss-brunch": "^2.0.3",
    "rimraf": "^2.4.3",
    "sass-brunch": "^1.8.10",
    "uglify-js-brunch": "^2.0.0",
    "yargs": "^6.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/greenhousegames/public-website.git"
  },
  "author": "Greenhouse Games, LLC",
  "license": "",
  "bugs": {
    "url": "https://github.com/greenhousegames/public-website/issues"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "homepage": "https://github.com/greenhousegames/public-website#readme"
}
