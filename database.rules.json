{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",

    "games": {
      "smashdot": {
        "reporting": {
          "default": {
            "metrics": {
              ".indexOn": [
                "played~~sum"
                "endedAt~~last"
              ]
            }
          },
          "users": {
            "metrics": {
              ".indexOn": [
                "classic-score~~max"
                "survival-duration~~min"
              ]
            }
          }
        }
      }
    }
  }
}
