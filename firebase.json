{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [{
      "source": "/index.html",
      "headers": [{
      	"key": "Cache-Control",
      	"value": "max-age=0, private, no-store, no-cache, must-revalidate"
      }]
    },{
      "source": "/games/**/*.@(json|png)",
      "headers": [{
      	"key": "Cache-Control",
      	"value": "max-age=0, private, no-store, no-cache, must-revalidate"
      }]
    }]
  }
}
